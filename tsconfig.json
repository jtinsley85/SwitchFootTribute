{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "/app",
    "outDir": "./dist/js",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "**/node_modules/**"
  ],
}